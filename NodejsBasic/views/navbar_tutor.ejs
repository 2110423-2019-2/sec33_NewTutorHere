    <script>
        $(document).ready(function(){
            $(".notification_container").click(function(){
                $(".dropdownn").toggleClass("active");
            })
        });

        window.onclick = function(event) {
            if (!event.target.matches('#notification'))
            {
                var dropdowns = document.getElementById("notification_list");
                if (dropdowns.classList.contains('active')) {
                    dropdowns.classList.remove('active');
                }
            }
        }
    </script>
   
